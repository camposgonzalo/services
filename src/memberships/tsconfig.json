{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2017",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "/opt/nodejs/general/*": [
                "../general/common/*"
            ],
            "/opt/nodejs/*": [
                "common/*"
            ],
        }
    },
    "include": [
        "common/**/*",
        "functions/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}